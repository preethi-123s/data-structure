#include <stdio.h>
#include <stdlib.h>

char* getLine(void) {
    char *line = NULL;
    int size = 0, c;
    while ((c = getchar()) != '\n' && c != EOF) {
        line = realloc(line, size + 2);
        line[size++] = c;
    }
    if (line) line[size] = '\0';
    return line;
}

int main() {
    printf("Enter line: ");
    char *s = getLine();
    printf("You entered: %s\n", s);
    free(s);
}
