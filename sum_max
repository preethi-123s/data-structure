#include <stdio.h>
#include <stdlib.h>

int main() {
    int N;
    printf("Enter number of elements: ");
    scanf("%d", &N);

    // Dynamically allocate memory for N integers
    int *arr = (int *)malloc(N * sizeof(int));
    if (arr == NULL) {
        printf("Memory allocation failed!\n");
        return 1;
    }

    // Read values into array using pointer arithmetic
    printf("Enter %d integers:\n", N);
    for (int i = 0; i < N; i++) {
        scanf("%d", (arr + i));  // using pointer arithmetic
    }

    // Find sum and maximum using pointer arithmetic
    int sum = 0;
    int max = *arr; // initialize max to first element

    for (int i = 0; i < N; i++) {
        sum += *(arr + i);
        if (*(arr + i) > max)
            max = *(arr + i);
    }

    // Display results
    printf("Sum = %d\n", sum);
    printf("Maximum = %d\n", max);

    // Free dynamically allocated memory
    free(arr);

    return 0;
}
